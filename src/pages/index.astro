---
import ItemCard from "@/components/svelte/ItemCard.svelte";
import DataCard from "@/components/svelte/DataCard.svelte";

import { Content as IntroMd } from "@/data/intro.mdx";
import { Content as RhythmGamesMd } from "@/data/rhythm-games.md";
import { Content as ExperienceMd } from "@/data/experience.mdx";
import { Content as LinksMd } from "@/data/links.md";
import { Content as AchievementsMd } from "@/data/achievements.mdx";

import MainLayout from "@/layouts/MainLayout.astro";
import { getEntry } from "astro:content";

const currProject = await getEntry("projects", "keybin");
const favProject = await getEntry("projects", "prescription-playing-cards");
---

<MainLayout title="home">
	<DataCard title="About">
		<IntroMd slot="md" />
	</DataCard>

	<DataCard title="Links">
		<LinksMd slot="md" />
	</DataCard>

	<DataCard title="Experience">
		<ExperienceMd slot="md" />
	</DataCard>

	<DataCard title="Achievements">
		<AchievementsMd slot="md" />
	</DataCard>

	<DataCard title="Rhythm Games">
		<RhythmGamesMd slot="md" />
	</DataCard>

	<ItemCard banner="⏱️ Current Project" {...currProject.data} />
	<ItemCard banner="❤️ Favorite Project" {...favProject.data} />
</MainLayout>
