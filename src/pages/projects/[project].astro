---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import type { MarkdownInstance } from "astro";
import { Image, Picture } from "astro:assets";
import { getCollection } from "astro:content";
import placeholder from "@/images/placeholder.jpg";
import { AspectRatio } from "@/components/ui/aspect-ratio";


export async function getStaticPaths() {
    const projectEntries = await getCollection("projects");
    return projectEntries.map((entry) => ({
        params: { project: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { data: frontmatter } = entry;
const { Content, headings } = await entry.render();
---

<style>
    article {
        @apply prose prose-base prose-code:whitespace-pre-wrap p-4;

        code {
            @apply !text-muted-foreground;
        }
    }

    hr {
        @apply mx-[-100rem] border-dashed;
    }
</style>

<BaseLayout title={frontmatter.title}>
    <section class="container border-x grow">
        <article class="justify-between flex w-full items-center bg-muted">
            <code>📁 {frontmatter.dir}</code>
            <a href={frontmatter.url}>
                <Button class="not-prose px-2 py-1" size="xs"> View -> </Button>
            </a>
        </article>
        <hr />
        <article>
            <h1 class="!my-0">{frontmatter.title}</h1>
            <p class="text-muted-foreground !mt-0">{frontmatter.summary}</p>
            <code>📅 {frontmatter.date}</code>
        </article>
        <hr />
        <div class="p-4 gap-2 flex flex-row flex-wrap">
        🏷️ {frontmatter.tags?.map(tag => {
            return <Badge>{tag}</Badge>
        })}
        
        </div>
        <hr />
        {
            !frontmatter.hideCover && frontmatter.cover && (
                <AspectRatio ratio={16 / 9}>
                    <Image
                        class="object-cover h-full w-full"
                        src={frontmatter.cover}
                        alt={frontmatter.title}
                    />
                </AspectRatio>
                <hr />
            )
        }
        <article class="prose"><Content /></article>
    </section>
</BaseLayout>
